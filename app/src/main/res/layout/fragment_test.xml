<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14BED1"
    tools:context=".TestFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lblProgram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select program"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:textColor="#39405A" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <!-- TODO: Update blank fragment layout -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/tglPgm1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/button_model"
                    android:textColor="#14BED1"
                    android:textSize="15dp"/>

                <Button
                    android:id="@+id/tglPgm2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/button_model"
                    android:textColor="#14BED1"
                    android:textSize="15dp"/>

                <Button
                    android:id="@+id/tglPgm3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/button_model"
                    android:textColor="#14BED1"
                    android:textSize="15dp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/lblProgramRunning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No test program is running"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#39405A"
                />

            <NumberPicker
                android:id="@+id/numberPicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="50dp"
                android:background="@drawable/button_model"
                android:text="Reset Default"
                android:textColor="#14BED1"
                android:textSize="20dp"

                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>